{
  "name": "todo-ts",
  "version": "1.0.0",
  "description": "A todo application built on typescript + express",
  "main": "src/server.ts",
  "scripts": {
    "format": "prettier --write src/*/**",
    "dev": "tsc-watch --onsuccess \"node dist/server.js\"",
    "build": "rimraf dist && npx tsc",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "clean": "rimraf .git && git init",
    "db:generate": "npx drizzle-kit generate --config=./src/config/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=./src/config/drizzle.config.ts",
    "db:migrate": "npx drizzle-kit migrate --config=./src/config/drizzle.config.ts",
    "db:push": "npx drizzle-kit push --config=./src/config/drizzle.config.ts"
  },
  "author": "@sanchitbajaj02",
  "license": "MIT",
  "_moduleAliases": {
    "@": "dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.1",
    "mysql2": "^3.14.5",
    "winston": "^3.17.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "drizzle-kit": "^0.31.4",
    "module-alias": "^2.2.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.9.2"
  }
}
